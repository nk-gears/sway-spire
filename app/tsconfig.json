{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "rootDir": ".",

    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types/"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016","es7"
    ]
  },
  "include": [
    "src/**/*"
  ]

}